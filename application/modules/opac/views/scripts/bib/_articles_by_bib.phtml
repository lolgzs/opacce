	foreach($news_bib as $bib => $events)	{
		echo ('<ul><h2>'.$bib.'</h2>');
		foreach($events as $art) 	{
			echo sprintf('<li><a href="%s" target="_parent">%s</a></li>',
									 $this->url($art->getUrl()),
									 $art->getTitre());
		}
		echo('</ul>');
	}

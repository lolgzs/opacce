	$news_bib = array();

	foreach($this->articles as $article) {
		// Nom de la ville
		if ($bib = $article->getBib())
			$ville = $bib->getVille();
		else 
			$ville = "Portail";

		if (!array_key_exists($ville, $news_bib))
			$news_bib[$ville] = array();

		$news_bib[$ville][] = $article;
	}

